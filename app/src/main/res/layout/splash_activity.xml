<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/shadowIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splashbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/iconIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_panther_icon"
        app:layout_constraintStart_toEndOf="@+id/shadowIV"
        app:layout_constraintEnd_toStartOf="@+id/shadowIV"
        app:layout_constraintTop_toTopOf="@+id/shadowIV"
        app:layout_constraintBottom_toTopOf="@+id/logoIV"
        app:layout_constraintVertical_chainStyle="packed"
        />


    <ImageView
        android:id="@+id/logoIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_panther_logo"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/shadowIV"
        app:layout_constraintEnd_toStartOf="@+id/shadowIV"
        app:layout_constraintTop_toBottomOf="@+id/iconIV"
        app:layout_constraintBottom_toBottomOf="@+id/shadowIV"
        />

</android.support.constraint.ConstraintLayout>
</layout>